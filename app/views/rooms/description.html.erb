<div class="row">
  <div class="col-md-3">
    <%= render "room_menu" %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Description
      </div>
      <div class="panel-body">
        <div class=container>
           <%= form_for @room do |f| %>

            <div class="div row">
              <div class="div form-group">
              <label for="">Listing Name</label>
              <%= f.text_field :listing_name, placeholder: "what is your listing name?", class: "form-control" %>
              </div>
            </div>

            <div class="div row">
              <div class="div form-group">
              <label for="">Summary</label>
              <%= f.text_field :summary, placeholder: "Summary of your house", class: "form-control" %>
              </div>
            </div>

            <div class="div text-center">
            <%= f.submit "Save", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>